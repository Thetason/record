# ================================
# 데이터베이스 설정
# ================================
# 개발: SQLite
DATABASE_URL="file:./prisma/dev.db"

# 프로덕션: PostgreSQL (Neon/Supabase)
# DATABASE_URL="postgresql://user:password@host:5432/database"

# ================================
# NextAuth 인증 설정
# ================================
# 32자 이상의 랜덤 문자열 (openssl rand -base64 32)
NEXTAUTH_SECRET="your-secret-key-here"

# 개발: http://localhost:3001
# 프로덕션: https://your-domain.com
NEXTAUTH_URL="http://localhost:3001"

# ================================
# OAuth 로그인 (선택사항)
# ================================
# Google OAuth
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# Kakao OAuth  
KAKAO_CLIENT_ID=""
KAKAO_CLIENT_SECRET=""

# ================================
# 이메일 발송 (Resend)
# ================================
# https://resend.com 에서 무료 API 키 발급
RESEND_API_KEY=""
EMAIL_FROM="Re:cord <noreply@your-domain.com>"

# ================================
# OCR (Google Vision API)
# ================================
# Base64로 인코딩된 서비스 계정 키
GOOGLE_VISION_API_KEY=""

# 또는 로컬 JSON 파일 경로 (개발용)
# GOOGLE_APPLICATION_CREDENTIALS="./google-vision-key.json"

# ================================
# 결제 (토스페이먼츠)
# ================================
TOSSPAYMENTS_CLIENT_KEY=""
TOSSPAYMENTS_SECRET_KEY=""

# ================================
# 보안 설정
# ================================
# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# CORS 허용 도메인
CORS_ALLOWED_ORIGINS="http://localhost:3000,http://localhost:3001"

# ================================
# 기타 설정
# ================================
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3001"